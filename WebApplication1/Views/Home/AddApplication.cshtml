@model WebApplication1.Models.Application

@{
    ViewData["Title"] = "AddApplication";


    List<SelectListItem> selectListItems = new List<SelectListItem>();
    List<SelectListItem> selectListItems1 = new List<SelectListItem>();
    List<SelectListItem> selectListItems2 = new List<SelectListItem>();
    List<SelectListItem> selectListItems3 = new List<SelectListItem>();

    List<TypeMalfunction> type = ViewBag.IdType as List<TypeMalfunction>;
    if (type != null)
    {
        selectListItems = type.Select(x => new SelectListItem
                {
                    Value = x.IdtypeMalfunction.ToString(),
                    Text = x.Type
                }).ToList();
    }



    List<User> user = ViewBag.IdUser as List<User>;
    if (user != null)
    {
        selectListItems1 = user.Select(x => new SelectListItem
            {
                Value = x.IdUser.ToString(),
                Text = x.Fullname
            }).ToList();
    }
    List<User> executor = ViewBag.IdExecutor as List<User>;
    if (executor != null)
    {
        selectListItems2 = executor.Select(x => new SelectListItem
            {
                Value = x.IdUser.ToString(),
                Text = x.Fullname
            }).ToList();
    }
    List<Equipment> equipment = ViewBag.IdEquipment as List<Equipment>;
    if (equipment != null)
    {
        selectListItems3 = equipment.Select(x => new SelectListItem
                {
                    Value = x.Idequipment.ToString(),
                    Text = x.Equipment1
                }).ToList();
    }
}

@using WebApplication1.Models


<h1>Добавление заявки</h1>

<h4>Заявка</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="AddApplication">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="IdEquipment" class="control-label"></label>
                <select name="IdEquipment" asp-for="IdEquipment" class="form-control" asp-items="selectListItems3"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdType" class="control-label"></label>
                <select name="IdType" asp-for="IdType" class="form-control" asp-items="selectListItems"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdExecutor" class="control-label"></label>
                <select name="IdExecutor" asp-for="IdExecutor" class="form-control" asp-items="selectListItems2"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdUser" class="control-label"></label>
                <select name="IdUser" asp-for="IdUser" class="form-control" asp-items="selectListItems1"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input name="Description" asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input name="Cost" asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Material" class="control-label"></label>
                <input name="Material" asp-for="Material" class="form-control" />
                <span asp-validation-for="Material" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input name="Status" asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phase" class="control-label"></label>
                <input name="Phase" asp-for="Phase" class="form-control" />
                <span asp-validation-for="Phase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateAdd" class="control-label"></label>
                <input name="DateAdd" type="date" asp-for="DateAdd" class="form-control" />
                <span asp-validation-for="DateAdd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateEnd" class="control-label"></label>
                <input name="DateEnd" type="date" asp-for="DateEnd" class="form-control" />
                <span asp-validation-for="DateEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <input name="Time" asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать заявление" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SignIn">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
